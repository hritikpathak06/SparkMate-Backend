{
  "compilerOptions": {
    "module": "CommonJS",        
    "moduleResolution": "node",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",         
    "allowJs": true,            
    "resolveJsonModule": true   
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}